<div class="panel panel-default">
	<div class="panel-heading">Your Trades</div>
	<table class="table table-striped table-hover table-bordered table-condensed table-bordered-only-top-bottom no-margin-top" id="stocks_in_portfolio_table">
	    <thead>
	        <tr>
	        	<th>Trade Type</th>
	            <th>Code</th>
	            <th>Price</th>
	            <th>Quantity</th>
	            <th>Brokerage</th>
	            <th>Value($)</th>
	            <th>Date</th>
	        </tr>
	    </thead>
	    <tbody>
		    <?php foreach($trades as $trade): ?>
				<tr>
					<td <?php if($trade->trade_type == "sell"): ?> class="color-red" 
						<?php elseif($trade->trade_type == "buy"): ?> class="color-green"
						<?php endif; ?>>
						<?php echo e($trade->trade_type); ?>

					</td>
					<td><?php echo e($trade->stock_code); ?></td>
					<td><?php echo e($trade->price); ?></td>
					<td><?php echo e($trade->quantity); ?></td>
					<td><?php echo e($trade->brokerage); ?></td>
					<td>
						<?php if($trade->trade_type == "buy"): ?>
							<?php echo e(number_format($trade->price * $trade->quantity + $trade->brokerage, 2)); ?>

						<?php elseif($trade->trade_type == "sell"): ?>
							<?php echo e(number_format($trade->price * $trade->quantity - $trade->brokerage, 2)); ?>

						<?php endif; ?>
					</td>
					<td><?php echo e($trade->date); ?></td>
				</tr>
			<?php endforeach; ?>
	    </tbody>
	</table>
</div>