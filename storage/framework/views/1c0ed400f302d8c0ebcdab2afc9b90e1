                	}
                	else{
						$('#metrics').load('/search/%7Bsearch%7D'+window.location.search+'&viewType=partial');
                	}
                }, 60000);
            });
	</script>
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="pull-left">
					<?php echo Form::open(['action' => 'SearchController@show', 'method' => 'get', 'class' => 'form-group form-inline']); ?>

						<?php echo Form::select('stockSector', $stockSectors, $stockSectorName, ['class' => 'form-control']); ?>

